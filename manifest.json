{
  "name": "Yoav Screenshot Extension",
  "version": "1.1",
  "description": "Capture screenshots for submitting apps to PlayStore and AppStore.",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Take a screen shot!"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "notifications"
  ],
  "manifest_version": 2
}
